snippet twi_input_prepended_text
	<div class="clearfix">
		<label for="prependedInput">${1:Prepended text}</label>
		<div class="input">
			<div class="input-prepend">
				<span class="add-on">${2:@}</span>
				<input class="medium" id="prependedInput" name="prependedInput" size="16" type="text" x-webkit-speech="">
			</div>
			<span class="help-block">${3:Here's some help text}</span>
		</div>
	</div>

